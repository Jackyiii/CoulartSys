<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../component/meta_config"); -%>
        <link rel="stylesheet" type="text/css" href="/css/admin/login_admin.css">
        <script type="text/javascript" src="/scripts/admin/login_admin.js"></script>
</head>

<body>
    <div id="app">
        <div id="background_container">
            <img class="imge_breath" src="/src/background_img/bg_teacher.png">
        </div>
        <div id="form_manager">
            <div id="role_info">
                <div id="title_role" class="animated bounceInDown">Coulart管理者登录</div>
                <div id="roles_img_admin" class="breathe_admin  circular-portrait animated headShake">
                    <img src="/src/background_img/eva_profil.png" class="circular-square">
                </div>
            </div>
            <form action="/admin/login" method="post">
                <div class="group">
                    <input class="input_style" id="user_name_value" type="text" name="email" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>邮箱</label>
                </div>
                <div class="group">
                    <input class="input_style" id="channel_value" type="password" name="password" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>密码</label>
                </div>
                <div id="btn_controller">
                    <input id="login_controller" class="btn_style" type="submit" value="登录吧" />
                </div>
            </form>
            <%- include ("../component/forgot_password"); -%>
        </div>
    </div>
</body>

</html>